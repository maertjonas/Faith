@page "/user"
@using Faith.Shared.Users
@inject IUserService FakeUserService

@*
<h1>Users</h1>
@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First name</th>
                <th>Last name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
            <tr>
              <td>@user.Id</td>
              <td><a href="user/@user.Id">@user.FirstName.ToString()</a></td>
              <td><a href="user/@user.Id">@user.LastName.ToString()</a></td>
            </tr>
            }
        </tbody>
    </table>
}
@code {
    private IEnumerable<UserDto.Index> users;
    protected override async Task OnInitializedAsync()
    {
        users = await FakeUserService.GetIndexAsync();
    }
}*@